@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;


@if (@ViewBag.Name != null)
{
    <form asp-action="Logoff" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item">
                
                <a asp-action="manage" title="Manage">Hello @ViewBag.Name</a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        
        <li class="nav-item"><a asp-action="register">Register</a></li>
        <li class="nav-item"><a asp-action="login">Login</a></li>
    </ul>
}



